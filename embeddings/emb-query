import argparse
import json
import sys

from embeddings import add_embeddings_args, connect_chroma, build_embeddings

ollama_base_url = 'http://localhost:11434'
ollama_model = 'mistral'
chroma_db_path = './chromadb'
chroma_collection_name = 'evr'

def parse_args():
    p = argparse.ArgumentParser()
    add_embeddings_args(p)
    p.add_argument('prompt',
                   metavar='PROMPT')
    return p.parse_args()

def main(args):
    emb = build_embeddings(args, args.prompt)
    chroma = connect_chroma(args)
    results = chroma.query(
        query_embeddings=[emb],
        n_results=10,
    )
    res = []
    for i, emb_id in enumerate(results['ids'][0]):
        res.append({
            'id': emb_id,
            'doc': results['documents'][0][i],
            'dist': results['distances'][0][i],
            'meta': results['metadatas'][0][i],
        })
    json.dump(res, sys.stdout, indent='\t')

if __name__ == '__main__':
    args = parse_args()
    main(args)
